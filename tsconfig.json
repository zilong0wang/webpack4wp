{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "es2016"
        ],
        "jsx": "react",
        "target": "es2016",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src/javascript/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}